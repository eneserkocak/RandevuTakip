<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.eneserkocak.randevu.viewModel.AppViewModel" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:strokeColor="#EBEBEB"
        app:strokeWidth="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            tools:context=".view_ayarlar.hizmet_ayar.HizmetDuzenleFragment">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Hizmet Düzenle"
                android:background="#068176"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textStyle="bold"

                android:textAlignment="center"></TextView>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutHizmAdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="HİZMET TÜRÜ"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/hizmet"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/voice"
                android:textAllCaps="true"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hizmetAdi"
                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutAciklama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="AÇIKLAMA"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/not"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/voice"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/aciklama"

                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutHizmFiyat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="HİZMET FİYATI"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/lira_24"
                app:endIconMode="custom"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fiyat"
                    android:inputType="number"

                    />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Hizmetin, Randevu Sayfasındaki Görünümü Kapatılsın mı ?  "
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <RadioGroup
                android:id="@+id/RadioGrup"
                android:layout_marginStart="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/kapaliBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kapalı" />

                <RadioButton
                    android:id="@+id/gorunBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Görünür" />

            </RadioGroup>




                <TextView
                    android:id="@+id/duzenleBtn"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/maps_btn_bg"
                    android:gravity="center"
                    android:text="Hizmeti Güncelle"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/white" />









        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>