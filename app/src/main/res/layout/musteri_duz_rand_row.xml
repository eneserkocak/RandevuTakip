<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="musteriRandevu"
            type="com.eneserkocak.randevu.model.Randevu" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rowLayout"
        android:orientation="vertical"
        android:background="@drawable/ilac_row_bg"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/randevuTarihi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginStart="5dp"
                app:tarihiYazdir="@{musteriRandevu.randevuTime}"
                android:textSize="14sp"

                ></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@{musteriRandevu.musteri.musteriAdi}"
                android:textSize="14sp"
                ></TextView>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/delete"
               android:id="@+id/deleteButton"
                ></ImageButton>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/musteriDetayiLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Saat"
                    android:textSize="12sp"></TextView>

                <TextView
                    android:id="@+id/randevuSaati"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    app:saatiYazdir="@{musteriRandevu.randevuTime}"
                    android:textSize="12sp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hizmet"
                    android:textSize="12sp"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@{musteriRandevu.hizmet.hizmetAdi}"
                    android:textSize="12sp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"

                    android:text="Gelir"
                    android:textSize="12sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                 android:textAlignment="viewStart"
                    android:drawableEnd="@drawable/lira_12"
                    android:drawableRight="@drawable/lira_12"
                    android:text="@{String.valueOf(musteriRandevu.randevuGeliri)}"
                    android:textSize="12sp"></TextView>


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    </ScrollView>

</layout>