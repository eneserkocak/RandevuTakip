<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:cropToPadding="true"
                        app:srcCompat="@drawable/fourth"></ImageView>









                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Artık Randevu Oluşturabilirsiniz..!"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:text=" * Randevu Ekle menüsünden, öncelikle randevu sahibi müşterinizi seçin.. ">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:text=" * Daha sonra randevuyu gerçekleştirecek personeli, hizmet'i, randevu tarihini ve randevu saatini seçerek randevuyu oluşturun.">
                    </TextView>










                </LinearLayout>




            </LinearLayout>



    </ScrollView>
