<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        tools:context=".view_ayarlar.personel_ayar.YeniPersonelEkleFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personel Adı"
            android:layout_marginTop="5dp"
            android:textSize="20sp"

            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/persIsmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ilac_row_bg"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColorHint="#5E5858"
            tools:text="Ali "


            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefon Numarası"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/persTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ilac_row_bg"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:inputType="number"
            android:textColorHint="#5E5858"
            tools:text="0506235216 "

            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-Mail"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/persMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ilac_row_bg"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColorHint="#5E5858"
            tools:text="ali@test.com  "
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:text="Personel Ekle"

            android:id="@+id/personelKydt"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/maps_btn_bg"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp" />




    </LinearLayout>
</layout>