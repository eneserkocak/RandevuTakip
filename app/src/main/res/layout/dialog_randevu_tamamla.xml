<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
         name="randevu"
         type="com.eneserkocak.randevu.model.Randevu" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:strokeColor="#EBEBEB"
        app:strokeWidth="3dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/tum_ilac_ilacsil_icon"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:text="Randevu geliri girmemeniz durumunda, hizmet ücreti esas alınır..!"></TextView>

        <ImageView
            android:id="@+id/imageView14"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/indicator" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Randevu Geliri"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"></TextView>


        <EditText
            android:id="@+id/randGelir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Boş bırakabilirsiniz..!"
            android:background="@drawable/ilac_row_bg"
            android:gravity="center_vertical"
            android:text=""
            android:inputType="number"
            android:textSize="16sp"></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:text="Vazgeç"
                android:id="@+id/vazgecBtn"

                android:textSize="16sp"
                android:background="@drawable/maps_cancel_btn_bg"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Tamamla"
                android:id="@+id/dialogTamamlaBtn"

                android:textSize="16sp"
                android:background="@drawable/maps_btn_bg"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"></TextView>


        </LinearLayout>

    </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>