<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="veresiye"
            type="com.eneserkocak.randevu.model.MusteriVeresiye" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ilac_row_bg"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{veresiye.musteri.musteriAdi}"
            android:textSize="16sp"
            android:textAllCaps="true"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Veresiye"
                    android:textSize="14sp"
                    ></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@{String.valueOf(veresiye.veresiyeSayisi)}"
                    android:textSize="14sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"

                    android:text="Toplam BorÃ§"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:drawableEnd="@drawable/lira_16"
                    android:drawableRight="@drawable/lira_16"
                    android:text="@{String.valueOf(veresiye.borc)}"
                    android:textSize="14sp"></TextView>

            </LinearLayout>




        </LinearLayout>




    </LinearLayout>

</layout>