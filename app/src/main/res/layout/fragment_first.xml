<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/first"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:text="Randevu oluşturmaya başlamadan önce..!"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=" * Randevu işlemlerine başlamadan önce, Firmanızı oluşturmanız gerekir. "
                        android:textAlignment="center"
                        android:textSize="16sp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=" * Firmanızı oluşturmak için, Yönetici işlemleri menüsüne gidin. "
                        android:textAlignment="center"
                        android:textSize="16sp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=" * Öncelikle; Firma Ayarları içinde, firma bilgilerinizi kaydedin. Müşterilerinize, firmanızın konumunu veya konumlarını gönderebilmek için, Haritadan konumunuzu ekleyin (Birden fazla konum ekleyebilirsiniz). "
                        android:textAlignment="center"
                        android:textSize="16sp"></TextView>




                </LinearLayout>


            </LinearLayout>


    </ScrollView>
</layout>