<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.eneserkocak.randevu.viewModel.AppViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        tools:context=".view_ayarlar.personel_ayar.PerDuzenleFragment">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutPersAdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="AD SOYAD"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/person"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/voice"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/persIsmi"
                    android:text="@{viewModel.secilenPersonel.personelAdi}"
                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutPersTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="TELEFON (0**********)"
                app:helperText="11 karakter giriniz*"
                app:counterEnabled="true"
                app:counterMaxLength="11"
                app:helperTextTextColor="#A81207"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/phones"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/voice"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/persTel"
                    android:inputType="number"
                    android:text="@{viewModel.secilenPersonel.personelTel}"
                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutPersEposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="E-MAİL"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/email"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/voice"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/persMail"
                    android:text="@{viewModel.secilenPersonel.personelMail}"
                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutPersUnvan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="UNVAN"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/unvan"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/voice"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/persUnvan"
                    android:text="@{viewModel.secilenPersonel.personelUnvan}"
                    />


            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personelin Yetki Durumunu Seçin..! "
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#A81207"
                android:layout_marginTop="10dp"

                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="visible">


                <RadioGroup
                    android:id="@+id/RadioGrupPers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/yoneticiBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yönetici" />

                    <RadioButton
                        android:id="@+id/personelBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Personel" />

                </RadioGroup>

            </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/imageView"
                android:adjustViewBounds="true"
                android:layout_width="140dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/musteri"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="Görsel Ekle"
                android:textAlignment="center"
                android:id="@+id/gorselEkleBtn"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/maps_btn_bg"
                ></TextView>


            <TextView
                android:id="@+id/personelGnclle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/maps_btn_bg"
                android:gravity="center"
                android:textSize="16sp"
                android:text="Bilgileri Güncelle"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView

                android:text="Vazgeç"
                android:textSize="16sp"
                android:id="@+id/vazgecBtn"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/maps_cancel_btn_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#FFFFFF"
                />







    </LinearLayout>


    </ScrollView>




</layout>