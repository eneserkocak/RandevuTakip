<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Müşteri Adı"
                android:layout_marginTop="10dp"
                android:textSize="20sp"

                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/musteriIsmi"
                android:hint="Müşteri ismi giriniz.!"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ilac_row_bg"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColorHint="#EBEBEB"

                tools:text="Ali "
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefon Numarası"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/musteriTel"
                android:hint="Müşteri Tel Numarası giriniz.!"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ilac_row_bg"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:inputType="number"
                android:textColorHint="#EBEBEB"
                tools:text="0506235216 "
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-Mail"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/musteriMail"
                android:hint="Müşteri e-mail giriniz.!"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ilac_row_bg"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColorHint="#EBEBEB"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adres"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/musteriAdres"
                android:hint="Müşteri adresini giriniz.!"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ilac_row_bg"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColorHint="#EBEBEB"
                tools:text="ali@test.com  "
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notlar"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/musteriNot"
                android:hint="Müşteri için not giriniz.!"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/ilac_row_bg"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColorHint="#EBEBEB"
                tools:text="ali@test.com  "
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:adjustViewBounds="true"
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/rsim_ekle"></ImageView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Görsel Ekle"
                android:textAlignment="center"
                android:id="@+id/gorselEkleBtn"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/maps_btn_bg"
                ></TextView>


            <TextView
                android:id="@+id/musteriEkleBtn"
                android:text="Müşteri Ekle"
                android:textAlignment="center"
                android:gravity="center"
               android:background="@drawable/maps_btn_bg"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />



            <TextView
                android:id="@+id/vazgecBtn"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/maps_cancel_btn_bg"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="#FFFFFF"
                android:text="Vazgeç" />

        </LinearLayout>


    </ScrollView>



</layout>