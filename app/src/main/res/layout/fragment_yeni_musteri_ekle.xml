<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutMustAdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:hint="AD SOYAD"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/person"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/voice"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/musteriIsmi"

                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutMustTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="TELEFON (0**********)"
                app:helperText="Karakter*"
                app:counterEnabled="true"
                app:counterMaxLength="11"
                app:helperTextTextColor="#A81207"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/phones"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/voice"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/musteriTel"

                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutMustEposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="E-MAİL"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/email"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/voice"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/musteriMail"

                    />


            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutMustAdres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="ADRES"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/location"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/voice"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/musteriAdres"

                    />


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutMustNot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="NOT (şahsi)"
                android:textSize="20sp"
                app:startIconDrawable="@drawable/not"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/voice"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/musteriNot"

                    />


            </com.google.android.material.textfield.TextInputLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:adjustViewBounds="true"
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/musteri"></ImageView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Görsel Ekle"
                android:textSize="16sp"
                android:textAlignment="center"
                android:id="@+id/gorselEkleBtn"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/maps_btn_bg"
                ></TextView>


            <TextView
                android:id="@+id/musteriEkleBtn"
                android:text="Müşteriyi Kaydet"
                android:textSize="16sp"
                android:textAlignment="center"
                android:gravity="center"
               android:background="@drawable/maps_btn_bg"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />



            <TextView
                android:id="@+id/vazgecBtn"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/maps_cancel_btn_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#FFFFFF"
                android:text="Vazgeç" />

        </LinearLayout>


    </ScrollView>



</layout>