<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view_ayarlar.firma_ayar.FirmaMapsFragment">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            map:layout_constraintBottom_toTopOf="@+id/placeText"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.0"
            tools:layout="@layout/fragment_firma_maps" />



        <EditText
            android:id="@+id/placeText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Firma ismi giriniz!.."
            android:inputType="textPersonName"
            android:background="@drawable/qrtext_bg"

            android:textAlignment="center"
            map:layout_constraintBottom_toTopOf="@+id/saveButton"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/maps_btn_bg"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:text="Konum Ekle"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
           android:background="@drawable/maps_cancel_btn_bg"
            android:gravity="center_vertical"
            android:text="Konumu Sil"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/konumGonderBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/maps_konum_btn_bg"
            android:gravity="center_vertical"

            android:text="Konumu Müşteriye Gönder"
            android:textAlignment="center"
            android:textColor="#090909"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            map:layout_constraintBottom_toTopOf="@+id/deleteButton"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>