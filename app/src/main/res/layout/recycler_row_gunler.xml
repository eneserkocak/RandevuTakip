<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>



        <variable
            name="gun"
            type="com.eneserkocak.randevu.model.CalismaGun" />


    </data>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gunIsimleri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:intToGunAdi="@{gun.gun}" />

            <Switch
                android:id="@+id/switchBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{gun.calisiyormu}"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/baslangicSaat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@{String.valueOf(gun.baslangicSaat.saat)+':'+String.valueOf(gun.baslangicSaat.dakika)}"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="time" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/tire"></ImageView>

            <TextView
                android:id="@+id/bitisSaat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@{String.valueOf(gun.bitisSaat.saat)+':'+String.valueOf(gun.bitisSaat.dakika)}"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="time" />
        </LinearLayout>



</layout>