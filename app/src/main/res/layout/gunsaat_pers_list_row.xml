<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="personel"
            type="com.eneserkocak.randevu.model.Personel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ilac_row_bg"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@{personel.personelAdi}"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textAllCaps="true"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/randevuyaAcik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"

                app:persRanDurGoster="@{personel}"

                android:gravity="center_vertical"
                android:textAlignment="viewEnd"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rightly_icon"></TextView>


        </LinearLayout>



    </LinearLayout>

</layout>