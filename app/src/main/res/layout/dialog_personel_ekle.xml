<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="0dp"
        tools:context=".view_ayarlar.personel_ayar.YeniPersonelEkleFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Personel Ekle"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"

            android:textAlignment="center"></TextView>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/layoutPersAdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="AD SOYAD"
            android:textSize="20sp"
            app:startIconDrawable="@drawable/person"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/voice"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/persIsmi"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/layoutPersTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="TELEFON (0**********)"
            app:helperText="Karakter*"
            app:counterEnabled="true"
            app:counterMaxLength="11"
            app:helperTextTextColor="#A81207"
            android:textSize="20sp"
            app:startIconDrawable="@drawable/phones"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/voice"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/persTel"
                android:inputType="number"

                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/layoutPersEposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="E-MAÄ°L"
            android:textSize="20sp"
            app:startIconDrawable="@drawable/email"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/voice"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/persMail"

                />


        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:text="Kaydet"
            android:textSize="16sp"
            android:id="@+id/personelKydt"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/maps_btn_bg"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>
</layout>