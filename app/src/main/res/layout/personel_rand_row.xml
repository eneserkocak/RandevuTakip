<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="personelRandevu"
            type="com.eneserkocak.randevu.model.Randevu" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rowLayout"
        android:orientation="vertical"
        android:background="@drawable/ilac_row_bg"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
          android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/randevuTarihi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                app:tarihiYazdir="@{personelRandevu.randevuTime}"
                android:textSize="14sp"


                ></TextView>



            <Switch
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Detay"
                android:textSize="12sp"
                android:textColor="#068176"
                android:textAlignment="center"
                android:id="@+id/switchBtn"></Switch>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/delete"
               android:id="@+id/deleteButton"
                ></ImageButton>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/personelDetayiLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="Müşteri"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textAlignment="viewStart"
                        android:textSize="14sp">

                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@{personelRandevu.musteri.musteriAdi}"
                        android:textSize="14sp"></TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="Saat"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textAlignment="viewStart"
                        android:textSize="14sp">

                    </TextView>

                    <TextView
                        android:id="@+id/randevuSaati"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:textSize="12sp"
                        app:saatiYazdir="@{personelRandevu.randevuTime}" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"

                        android:textSize="12sp"
                        app:persRanDurumu="@{personelRandevu}"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="Hizmet"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textAlignment="viewStart"
                        android:textSize="14sp">

                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@{personelRandevu.hizmet.hizmetAdi}"
                        android:textSize="12sp"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"

                        android:text="Gelir"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/lira_12"
                        android:drawableRight="@drawable/lira_12"
                        android:text="@{String.valueOf(personelRandevu.randevuGeliri)}"
                        android:textAlignment="viewStart"
                        android:textSize="12sp"></TextView>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</layout>