<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="personel"
            type="com.eneserkocak.randevu.model.Personel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ilac_row_bg"
        android:gravity="center_vertical"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">



            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"

                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textAllCaps="true"

                android:text="@{personel.personelAdi}"
                 />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                app:persYetkiGoster="@{personel}"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="#068176"

                android:gravity="center_vertical"


                ></TextView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/rightly_icon">

            </ImageView>



        </LinearLayout>


    </LinearLayout>
</layout>